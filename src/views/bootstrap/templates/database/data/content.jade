.container-fluid
  .row
    .col-xs-12
      .page-header
        h1 Datenbank
      h2 Transport Werte
      table.table.table-hover.table-condensed
        thead
          tr
            th nutscode
            th level
            th exports
            th export amount
            th imports
            th import amount
        tbody
          tr(ng-repeat="dat in data")
            td {{dat.nutscode}}
            td {{dat.level}}
            //- exports
            td
              table.table.table-hover.table-condensed(ng-show="dat.exports")
                thead
                  tr
                    th nutscode
                    th timeline
                tbody
                  tr(ng-repeat="export in dat.exports")
                    td {{export.nutscode}}
                    td
                      table.table.table-hover.table-condensed(ng-show="export.timeline")
                        thead
                          tr
                            th year
                            th value
                        tbody
                          tr(ng-repeat="time in export.timeline")
                            td {{time.year}}
                            td {{time.value}}
            //- exportamount
            td
              table.table.table-hover.table-condensed(ng-show="dat.exportamount")
                thead
                  tr
                    th year
                    th value
                tbody
                  tr(ng-repeat="(year, value) in dat.exportamount")
                    td {{year}}
                    td {{value}}
            //- imports
            td
              table.table.table-hover.table-condensed(ng-show="dat.imports")
                thead
                  tr
                    th nutscode
                    th timeline
                tbody
                  tr(ng-repeat="import in dat.imports")
                    td {{import.nutscode}}
                    td
                      table.table.table-hover.table-condensed(ng-show="import.timeline")
                        thead
                          tr
                            th year
                            th value
                        tbody
                          tr(ng-repeat="time in import.timeline")
                            td {{time.year}}
                            td {{time.value}}
            //- importamount
            td
              table.table.table-hover.table-condensed(ng-show="dat.importamount")
                thead
                  tr
                    th year
                    th value
                tbody
                  tr(ng-repeat="(year, value) in dat.importamount")
                    td {{year}}
                    td {{value}}
