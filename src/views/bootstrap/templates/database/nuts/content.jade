.container-fluid
  .row
    .col-xs-12
      .page-header
        h1 Datenbank
      h2 Nuts
        span(ng-show="level >= 0")
          | Level {{level}}
        span(ng-show="code")
          | Code {{code}}
      table.table.table-hover.table-condensed
        thead
            tr
              th nutscode
              //- th(ng-if="level >= 1") nutsubcode
              th label
              th level
              th hasc
              th typ
              th parent
              th childs
          tbody
            tr(ng-repeat="nut in nuts")
              td {{nut.nutscode}}
              //- td(ng-if="level >= 1") {{nut.nutsubcode}}
              td {{nut.label}}
              td {{nut.level}}
              td {{nut.hasc}}
              td {{nut.typ}}
              td
                a(ng-if="nut.parent", ui-sref="bootstrap-layout.database-nuts-code({code:nut.parent})") {{nut.parent}}
              td
                span(ng-if="nut.childs.length", ng-repeat="child in nut.childs")
                  a(ui-sref="bootstrap-layout.database-nuts-code({code:child})") {{child+" "}}
